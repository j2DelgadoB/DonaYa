<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <QuickContactBadge
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/foto"
        android:layout_alignTop="@+id/list_item_respuesta_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/quickcontactbadge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/respuesta"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:id="@+id/list_item_respuesta_textview"
        android:layout_below="@+id/textSolicitud"
        android:layout_toRightOf="@+id/foto"
        android:layout_toEndOf="@+id/foto" />

</RelativeLayout>